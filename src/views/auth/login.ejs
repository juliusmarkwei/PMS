<%- include('../partials/head', {title: "Login to MacStore"}) %>
<body>
    <section class="bg-white">
        <div class="grid grid-cols-1 lg:grid-cols-2 h-[95dvh]">
            <!-- Left Column -->
            <div
                class="flex items-center justify-center px-4 py-10 bg-white sm:px-6 lg:px-8 sm:py-16 lg:py-24"
            >
                <div class="xl:w-full xl:max-w-sm 2xl:max-w-md xl:mx-auto">
                    <h2
                        class="text-3xl font-bold leading-tight text-black sm:text-4xl"
                    >
                        Sign in to MacStore
                    </h2>
                    <p class="mt-2 text-base text-gray-600">
                        Donâ€™t have an account?
                        <a
                            href="/auth/signup"
                            class="font-medium text-[#b949bf] transition-all duration-200 hover:text-[#b949bf] hover:underline focus:text-[#b949bf]"
                            >Signup</a
                        >
                    </p>

                    <!-- Form -->
                    <form
                        action="/auth/login"
                        method="POST"
                        class="mt-8"
                        id="loginForm"
                    >
                        <div class="space-y-5">
                            <!-- Email Input -->
                            <div>
                                <div
                                    class="mt-2.5 relative text-gray-400 focus-within:text-gray-600"
                                >
                                    <div
                                        class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                                    >
                                        <svg
                                            class="w-5 h-5"
                                            xmlns="http://www.w3.org/2000/svg"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke="currentColor"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                                d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                                            />
                                        </svg>
                                    </div>
                                    <input
                                        type="email"
                                        name="email"
                                        id="email"
                                        placeholder="Email Address"
                                        class="block w-full py-4 pl-10 outline-none pr-4 text-black placeholder-gray-400 transition-all duration-200 border border-gray-200 rounded-lg bg-gray-50 caret-[#c05bc6] focus:border-[#c05bc6] focus:bg-white focus:ring-1 focus:ring-[#c05bc6]"
                                        required
                                    />
                                </div>
                            </div>

                            <!-- Password Input -->
                            <div>
                                <div class="flex items-center justify-start">
                                    <a
                                        href="/auth/forgot-password"
                                        class="text-sm font-medium text-[#c05bc6] hover:underline hover:text-[#b949bf] focus:text-[#b949bf]"
                                        >Forgot password?</a
                                    >
                                </div>
                                <div
                                    class="mt-2.5 relative text-gray-400 focus-within:text-gray-600"
                                >
                                    <div
                                        class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            fill="none"
                                            viewBox="0 0 24 24"
                                            stroke-width="1.5"
                                            stroke="currentColor"
                                            class="w-5 h-5"
                                        >
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                d="M7.864 4.243A7.5 7.5 0 0 1 19.5 10.5c0 2.92-.556 5.709-1.568 8.268M5.742 6.364A7.465 7.465 0 0 0 4.5 10.5a7.464 7.464 0 0 1-1.15 3.993m1.989 3.559A11.209 11.209 0 0 0 8.25 10.5a3.75 3.75 0 1 1 7.5 0c0 .527-.021 1.049-.064 1.565M12 10.5a14.94 14.94 0 0 1-3.6 9.75m6.633-4.596a18.666 18.666 0 0 1-2.485 5.33"
                                            />
                                        </svg>
                                    </div>
                                    <input
                                        type="password"
                                        name="password"
                                        id="password"
                                        placeholder="Password"
                                        class="block w-full py-4 pl-10 outline-none pr-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-lg bg-gray-50 caret-[#c05bc6] focus:border-[#c05bc6] focus:bg-white focus:ring-1 focus:ring-[#c05bc6]"
                                        required
                                    />
                                </div>
                            </div>

                            <!-- Login Button -->
                            <div>
                                <button
                                    type="submit"
                                    class="inline-flex items-center justify-center w-full px-4 py-4 text-base font-semibold text-white transition-all duration-200 bg-[#c05bc6] border border-transparent rounded-md focus:outline-none hover:bg-[#b949bf] focus:bg-[#b949bf]"
                                >
                                    Log in
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- Right Column (Image) -->
            <div class="hidden lg:block">
                <img
                    src="/9796291.jpg"
                    alt="Login Illustration"
                    class="object-cover w-[80%] h-[80vh] my-auto"
                />
            </div>
        </div>
    </section>

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const successMsg = urlParams.get("successMsg");

        if (successMsg) {
            Toastify({
                text: successMsg,
                duration: 3000,
                position: "right",
                backgroundColor: "#10B981",
                stopOnFocus: true,
                style: {
                    color: "white",
                    margin: "0 auto",
                    padding: "5px",
                    fontSize: "1rem",
                    fontWeight: "500",
                    width: "100dvw",
                    textAlign: "center",
                },
            }).showToast();
        }
    </script>
</body>
